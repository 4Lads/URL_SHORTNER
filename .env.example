# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urlshortener
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=urlshortener
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS_ANONYMOUS=10
RATE_LIMIT_MAX_REQUESTS_AUTHENTICATED=100

# Analytics
GEOIP_DATABASE_PATH=./data/GeoLite2-City.mmdb

# Short Code Generation
SHORT_CODE_LENGTH=7
SHORT_CODE_ALPHABET=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789

# Email (Future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=info

# Cache TTL (in seconds)
CACHE_TTL=86400

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
